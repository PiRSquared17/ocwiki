<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<subclass name="org.ocwiki.data.MultichoiceQuestion" 
		extends="org.ocwiki.data.Question" discriminator-value="MultichoiceQuestion">
		<list name="answers" table="MultichoiceQuestionChoice" lazy="true"
			cascade="all" inverse="false" fetch="subselect">
			<key column="question_id" />
			<index column="answer_index"></index>
			<many-to-many column="answer_id" class="org.ocwiki.data.Answer" />
		</list>
	</subclass>
</hibernate-mapping>
