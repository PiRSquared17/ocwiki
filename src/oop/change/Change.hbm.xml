<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="oop.change.Change">
        <id name="id" column="chg_id" access="field">
            <generator class="increment" />
        </id>
        <many-to-one name="user" access="field" column="chg_user"
                class="oop.data.User" fetch="select"/>
        <property name="datetime" access="field" column="chg_datetime" type="java.util.Date" />
        <property name="comment" access="field" column="chg_comment" type="java.lang.String"/>
        <many-to-one name="article" access="field" column="chg_article"
                class="oop.data.Article" />
        <property name="minor" access="field" column="chg_minor" type="boolean" />
        <property name="delegate" access="field" type="oop.persistence.ChangeDelegateUserType">
            <column name="chg_delegate"></column>
        </property>
    </class>
</hibernate-mapping>