<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<union-subclass name="oop.data.BaseQuestion" table="question"
    		extends="oop.data.BaseArticle">
		<property name="level" type="int">
			<column name="ques_level" />
		</property>
		<set name="answers" table="answer" lazy="true" 
		      where="ans_status &lt;&gt; 'DELETED'"
			order-by="ans_id asc">
            <key>
                <column name="ans_question" />
            </key>
            <one-to-many class="oop.data.Answer" />
        </set>
    </union-subclass>
</hibernate-mapping>
