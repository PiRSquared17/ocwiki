<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<subclass name="oop.data.BaseQuestion" 
		extends="oop.data.BaseArticle" discriminator-value="BaseQuestion">
		<property name="level" type="int" />
		<list name="answers" table="BaseQuestionAnswer" lazy="true"
			cascade="all" inverse="false" fetch="subselect">
			<key column="question_id" />
			<index column="answer_index"></index>
			<many-to-many column="answer_id" class="oop.data.Answer" />
		</list>
	</subclass>
</hibernate-mapping>
