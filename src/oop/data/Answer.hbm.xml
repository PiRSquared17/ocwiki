<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="oop.data.Answer" table="answer">
        <id name="id" type="long" access="field">
            <column name="ans_id" />
            <generator class="identity" />
        </id>
        <version name="version" column="ans_version"></version>
        <many-to-one name="question" class="oop.data.BaseQuestion" fetch="select">
            <column name="ans_question" />
        </many-to-one>
        <many-to-one name="content" class="oop.data.Text" fetch="join">
            <column name="ans_content" />
        </many-to-one>
        <property name="correct" type="boolean">
            <column name="ans_correct" />
        </property>
        <property name="deleted" type="boolean">
            <column name="ans_deleted" />
        </property>
    </class>
</hibernate-mapping>
