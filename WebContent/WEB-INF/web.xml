<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ocwiki</display-name>
  <context-param>
    <param-name>configDir</param-name>
    <param-value>/WEB-INF/conf</param-value>
  </context-param>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>oop.controller.OcwikiApp</listener-class>
  </listener>
  <error-page>
    <error-code>404</error-code>
    <location>/error/404</location>
  </error-page>
  <error-page>
    <exception-type>org.hibernate.exception.GenericJDBCException</exception-type>
    <location>/error/database</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/500</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>ActionController</display-name>
    <servlet-name>ActionController</servlet-name>
    <servlet-class>oop.controller.ActionController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionController</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ActionController</servlet-name>
    <url-pattern>/action/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>APIController</display-name>
    <servlet-name>APIController</servlet-name>
    <servlet-class>oop.controller.APIController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>APIController</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <servlet-name>REST Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>oop.controller.rest</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>rest-filter</display-name>
    <filter-name>rest-filter</filter-name>
    <filter-class>oop.filter.RestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>rest-filter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>SetupServlet</display-name>
    <servlet-name>SetupServlet</servlet-name>
    <servlet-class>oop.controller.SetupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SetupServlet</servlet-name>
    <url-pattern>/setup</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>url-rewrite</display-name>
    <filter-name>url-rewrite</filter-name>
    <filter-class>oop.filter.UrlRewritingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>url-rewrite</filter-name>
    <url-pattern>/article/*</url-pattern>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>ErrorController</display-name>
    <servlet-name>ErrorController</servlet-name>
    <servlet-class>oop.controller.ErrorController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorController</servlet-name>
    <url-pattern>/error/*</url-pattern>
  </servlet-mapping>
</web-app>